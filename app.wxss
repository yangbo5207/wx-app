/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page {
  font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif;
  font-size: 14px;
  background-color: #F6F6F6;
}

/* 主页列表样式 */
.rec-top {
    padding-top: 20rpx;
    height: 66rpx;
    border-bottom: 1px solid #E5E5E5;
    font-size: 24rpx;
}
.rec-top-wrap {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 66rpx;
    padding-right: 30rpx;
}
.rec-type {
    width: 60rpx;
    height: 30rpx;
    border-radius: 4rpx;
    color: #fff;
    text-align: center;
    line-height: 32rpx;
}
.type-hot {
    background-color: #F20642;
}
.type-prediction {
  background-color: #19B6B5;
}
.type-topic {
  background-color: #EB6422;
}
.type-highlight {
  background-color: #24A0F5;
}
.rec-source {
    color: #999999;
}
.rec-middle-wrap {
    display: flex;
    justify-content: space-between;
    padding-top: 22rpx;
    padding-right: 30rpx;
}
.rec-image-wrap {
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
    overflow: hidden;
}
.rec-image {
    width: 100%;
    flex: 0;
}
.rec-info {
    flex: 1;
}
.rec-title {
    font-size: 32rpx;
    color: #222222;
}
.rec-desc {
    font-size: 26rpx;
    color: #666666;
    margin-top: 16rpx;
    line-height: 1.6;
}
.rec-bottom {
    padding-top: 16rpx;
    height: 36rpx;
    display: flex;
    font-size: 24rpx;
    color: #999999;
}
.rec-bottom-item {
    margin-right: 16rpx;
}

/* 评论赞同收藏按钮样式 */
.bottom-bar {
    position: fixed;
    width: 100%;
    height: 100rpx;
    background-color: #F6F6F6;
    left: 0;
    bottom: 0;
    border-top: 1px solid #DDDDDD;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 30rpx;
    color: #333333
}

.bottom-bar-item {
  position: relative;
}
.bottom-bar-icon {
  position: absolute;
  content: '';
  width: 30rpx;
  height: 30rpx;
  left: -36rpx;
  top: 2rpx;
}
.likes {
  width: 32rpx;
}
.comments {
  height: 28rpx;
  top: 4rpx;
}

/* 下拉出现的loading */
.bottom-loading {
    height: 100rpx;
    align-items: center;
    justify-content: center;
    font-size: 26rpx;
    color: #999999;
}
.bottom-loading-image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}
.bottom-end {
    font-size: 26rpx;
    color: #999999;
    height: 100rpx;
    align-items: center;
    justify-content: center;
    position: relative;
}
.bottom-end-line {
    position: absolute;
    width: 100%;
    border-top: 1px solid #E5E5E5;
    top: 50rpx;
    z-index: -1;
}
.bottom-end-text {
    background-color: #F6F6F6;
    padding: 0 46rpx;
}