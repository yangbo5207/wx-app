@import "components/wxParse/wxParse.wxss";
@import "components/upLoadMore/upLoadMore.wxss";
@import "components/feeds/feeds.wxss";
@import "components/actionsBar/actionsBar.wxss";

view {
    box-sizing: border-box;
}

page {
  font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif;
  font-size: 14px;
  background-color: #F6F6F6;
}

/* 回复框样式 */
.comment-input-wrap {
    height: 50px;
    background-color: #fdfdfd;
    border:1px solid #e5e5e5;
    border-left: 0;
    border-right: 0;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    position: absolute;
    bottom: 0;
    width: 100%;
}
.comment-input-box {
    box-sizing: border-box;
    background-color: #fff;
    width: 605rpx;
    border: 1px solid #e5e5e5;
    border-radius: 4px;
    padding-left: 20rpx;
    font-size: 26rpx;
}
.comment-input {
    height: 30px;
    background-color: #fff;
    border-radius: 4px;
}
.comment-send {
    flex: 1;
    margin-left: 20rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #2A4B87;
}

button.primary {
    background-color: #F8CC00;
    height: 92rpx;
    line-height: 94rpx;
    font-size: 36rpx;
    margin: 0 40rpx;
}


/* 手机绑定样式 */
.bind-phone-wrap {
    margin: 30rpx 0;
    font-size: 34rpx;
}
.bind-phone-item {
    background-color: #fff;
    height: 90rpx;
    display: flex;
    margin-top: 1px;
    padding-left: 20rpx
}
.bind-item-left {
    height: 100%;
    width: 180rpx;
    display: flex;
    align-items: center
}
.bind-item-middle {
    flex: 1;
    height: 100%;
}
.bind-item-right {
    width: 90rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.bind-item-right-img {
    width: 30rpx;
    height: 30rpx;
}
.encryption {
    width: 35rpx;
    height: 25rpx;
}
.disclaimer-message {
    font-size: 26rpx;
    color: #9B9B9B;
    text-align: center;
    margin: 40rpx auto;
}
.disclaimer-label {
    color: #034C8C;
}
