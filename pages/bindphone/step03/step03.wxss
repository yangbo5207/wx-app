.message {
    font-size: 28rpx;
    color: #999999;
    text-align: center;
    margin: 24rpx auto;
}
.bind-item-right {
    width: 220rpx;
    font-size: 32rpx;
    border-left: 1px solid #F6F6F6;
}
.count-down-underway {
    color: #B2B2B2;
}
.count-down-end {
    color: #034C8C;
}
button.primary {
    margin-top: 60rpx;
}
.error-message {
    position: absolute;
    width: 100%;
    height: 70rpx;
    background-color: #E64340;
    color: #fff;
    text-align: center;
    line-height: 72rpx;
    top: 0;
}
